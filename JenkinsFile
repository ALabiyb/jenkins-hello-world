pipeline {
    agent any
    
    tools {
    // Install the Maven Version configured as "M3" and add it to the path
    maven "MAVEN399"
    }

    stages {
        stage('Echo Version'){
            steps {
                sh "echo Print maven version"
                sh "mvn --version"
            }
        }
        stage('Build'){
            steps {
                //Get the code from a Github repository
                git branch: 'main', 'https://github.com/ALabiyb/jenkins-hello-world.git'

                //Run maven package cmd
                sh "mvn clean package -DskipTests=true"
            }
        }
        stage('Unit Test'){
            steps {
                sh 'mvn test'
            }
        }
    }

}
